<%= form_with model: resource, url: user_registration_path, class: 'registration-main', local: true do |f| %>

<div class="text-center">
  <h1>Sign up</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">ニックネーム</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) sports太郎", maxlength:"40" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">性別</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:sex_id, Sex.all, :id, :name, {}, {class:"select-box", id:"user-sex"}) %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">お名前(全角)</label>
        <span class="indispensable">必須</span>
      <div class='input-name-wrap'>
        <%= f.text_area :first_name, class:"input-name", id:"first-name", placeholder:"例) 山田" %>
        <%= f.text_area :last_name, class:"input-name", id:"last-name", placeholder:"例) 陸太郎" %>
      </div>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">お名前カナ(全角)</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='input-name-wrap'>
        <%= f.text_area :first_name_kana, class:"input-name", id:"first-name-kana", placeholder:"例) ヤマダ" %>
        <%= f.text_area :last_name_kana, class:"input-name", id:"last-name-kana", placeholder:"例) リクタロウ" %>
      </div>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード(確認)</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">生年月日</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='input-birth-wrap'>
       <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="avatar">アイコン写真を選択</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.file_field :image, id:"user-image" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">好きなスポーツを選択してください</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:likesports_id, Likesports.all, :id, :name, {}, {class:"select-box", id:"ueer-likesports"}) %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">好きなチームを選択してください</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:liketeam_id, Liketeam.all, :id, :name, {}, {class:"select-box", id:"user-liketeam"}) %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">居住地</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:prefectures_id, Prefectures.all, :id, :name, {}, {class:"select-box", id:"user-prefectures"}) %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">職業</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:job_id, Job.all, :id, :name, {}, {class:"select-box", id:"user-job"}) %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">結婚の有無</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:marriage_id, Marriage.all, :id, :name, {}, {class:"select-box", id:"user-marriage"}) %>
    </div>

    <div class="form-group">
      <h2 class='form-bottom-text'>
        「会員登録」のボタンを押すことにより、
        <span>利用規約</span>
        <br>に同意したものとみなします
      </h2>
    </div>
    <div class='register-btn'>
      <%= f.submit "会員登録" ,class:"register-red-btn" %>
    </div>
    <p class='register-info'>本人情報の登録について</p>
  </div>
</div>
<% end %>

